{
  "name": "inflow-mcp-server",
  "version": "1.1.5",
  "description": "MCP server for inFlow Inventory API integration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "inflow-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
